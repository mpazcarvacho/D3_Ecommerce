

<div class="container">
<h2 class="text-center">Productos</h2>
  <% @products.each_slice(4) do |products|%>
    <div class="row">
      <% products.each do |product|%>
      <div class="col-3">
        <div class="card">
          <%=image_tag 'https://dummyimage.com/600x400/c7c7c7/737373&text=image', class:'card-img-top img-fluid'%>
          <div class='card-body'>
            <div class="card-title">
              <%=product.name%>
            </div>
            <div class="card-text">
              <div class='badge bg-primary'>
                <%= product.categories.first.name %>
              </div>
              <div>
                <%= number_to_currency product.price%>
              </div>
              <div class="row float-end">
                <div class="col-md-12">
                  <%# <button class="btn btn-primary btn-sm"> Add to cart </button> %>
                  <%= form_for :cart, url: cart_path, method: :put do |f|%>
                    <%= f.hidden_field :product_id, value: product.id %>
                    <%= f.hidden_field :quantity, value: 1 %>
                    <%= f.submit "Add to cart", class:'btn btn-primary btn-sm float-end'%>
                  <% end %>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
      <%end%>
    </div>
  <%end%>
</div>